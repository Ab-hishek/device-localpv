apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: devicepv-custom-topology-wait
allowVolumeExpansion: true
parameters:
  fsType: "ext4"
  devname: "{{ device_name }}"
provisioner: device.csi.openebs.io
volumeBindingMode: WaitForFirstConsumer
allowedTopologies:
- matchLabelExpressions:
  - key: {{ lkey }} 
    values:
      - {{ lvalue }}

